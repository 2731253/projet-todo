<section>
    <h2>Connexion</h2>

    <form id="form-connexion" class="form-authentification">
        <label for="input-courriel">Courriel<input
                type="email"
                id="input-courriel"
            /></label>

        <label for="input-mot-de-passe">Mot de passe<input
                type="password"
                id="input-mot-de-passe"
            /></label>

        <input type="submit" value="Connexion" />
        <p id="connexion-erreur"></p>
    </form>
</section>

<section>
    <h2>Nouveau compte</h2>

    <form id="form-inscription" class="form-authentification">
        <label for="input-courriel2">Courriel<input
                type="email"
                id="input-courriel2"
            /></label>

        <label for="input-mot-de-passe2">Mot de passe<input
                type="password"
                id="input-mot-de-passe2"
            /></label>
        <label for="input-nom">Nom<input type="text" id="input-nom" /></label>

        <input type="submit" value="Inscription" />
